@model KBT.Models.Employee

@{
    ViewData["Title"] = "Delete";
}

@{List<Fruit> fruits = ViewData["Fruits"] as List<Fruit>; }
@if (fruits.Count() == 0)
{
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Employee</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class = "col-sm-10">
                <img style="width:200px; height:200px; border-radius:50%;" src="@Model.Image" alt="Alternate Text" />
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
}
else
{
    <h5 class="bg-warning" style="padding:5px; text-align:center;">Sorry! We cannot delete this Employee because it is registered as a Employee of Fruit(s)</h5>
    <table style="text-align:center;">
        <thead>
            <tr>
                <th>Fruit Name</th>
                <th>Fruit Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var fruit in fruits)
            {
                if (fruit.EmployeeId == Model.Id)
                {
                    <tr>
                        <td style="width:200px;">@fruit.Title</td>
                        <td><img style="width:200px;" src="@fruit.URL" alt="@fruit.Title" /></td>
                    </tr>
                }

            }
        </tbody>
    </table>
    <h5 class="bg-primary" style="padding:5px; text-align:center;">Please delete/update these Fruits before deletion of Employee.</h5>
}